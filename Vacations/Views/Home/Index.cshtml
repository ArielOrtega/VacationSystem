@{
    ViewBag.Title = "Home Page";
    if(this.Session["Header"] == null) {Layout = "~/Views/Shared/_LayoutHome.cshtml";}
}

<div class="jumbotron">
    <h1>Vacaciones</h1>
</div>
<div class="row">
    
    <div class="col-md-4">
        <h2>Bienvenido al sistema de vacaciones</h2>
        <p>
            Este sistema fue contruido para ayudarle con
            el manejo y control de sus vacaciones,
            volviendo todo más sencillo y práctico.
        </p>
        <br />  
       
    <form action="/Home/Login/" method="post">
        <div class="form-group">
            <label>Correo</label>
            <input class="form-control" type="text" name="email" value="" />
        </div>
        <div class="form-group">
            <label>Contrase&ntilde;a</label>
            <input class="form-control" type="password" name="pass" value="" />
        </div>
        @{
            if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert-danger">
                    @ViewBag.Message
                </div>
            }
        }
        <div class="form-group">
            <button class="btn btn-default">Iniciar Sesi&oacute;n</button>
        </div>

    </form>

    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        
    </div>
</div>
