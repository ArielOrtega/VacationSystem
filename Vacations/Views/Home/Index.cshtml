@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Vacaciones</h1>
</div>
<div class="row">
    
    <div class="col-md-4">
        <h2>Bienvenido al sistema de vacaciones</h2>
        <p>
            Este sistema fue contruido para ayudarle con
            el manejo y control de sus vacaciones,
            volviendo todo más sencillo y práctico.
        </p>
        <br />  
        @{
            if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert-danger">
                    @ViewBag.Message
                </div>
            }
        }
        <form action="/Home/Login/" method="post">
            <div class="form-group">
                <label>User</label>
                <input class="form-control" type="text" name="user" value="" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" type="password" name="pass" value="" />
            </div>
            <div class="form-group">
                <button class="btn btn-default">Log in</button>
            </div>

        </form>

    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        
    </div>
</div>
