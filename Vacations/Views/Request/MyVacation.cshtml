@model List<Vacations.Models.RequestDTO>

@{
    ViewBag.Title = "MyVacation";
    Layout = "~/Views/Shared/_LayoutSupervisor.cshtml";
    Layout = (string)this.Session["Header"];

    int idPerson = (int)this.Session["idUser"];


}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h2>Mis solicitudes de vacaciones</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">@Html.ActionLink("Inicio >", "Index", "Home")</a></li>
            <li class="breadcrumb-item"><a href="#">@Html.ActionLink("Perfil >", "Profile", "Profile")</a></li>
            <li class="breadcrumb-item active" aria-current="page">Vacaciones ></li>
            <li class="breadcrumb-item active" aria-current="page">Ver ></li>
        </ol>
    </nav>
    <h2>Mis solicitudes de vacaciones</h2>
    <div>
        <h4>Filtrar por estado</h4>
        <div class="btn-group" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-secondary">@Html.ActionLink("En espera", "FilterRequest", new { state = "sent"})</button>
            <button type="button" class="btn btn-secondary">@Html.ActionLink("Aceptado", "FilterRequest", new { state = "acepted" })</button>
            <button type="button" class="btn btn-secondary">@Html.ActionLink("Cancelado", "FilterRequest", new { state = "rejected" })</button>
        </div>
    </div>

    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th scope="col" width="150">Fecha de solicitud</th>
                <th scope="col" width="150">Estado</th>
                <th scope="col" width="150">Motivo</th>
                <th scope="col" width="150">Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewData.Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.createdAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.state)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        <a asp-page="./Editar">

                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
